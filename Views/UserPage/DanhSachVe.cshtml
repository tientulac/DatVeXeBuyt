
@{
    ViewBag.Title = "DanhSachVe";
    Layout = "~/Views/Shared/UserLayout/_Main.cshtml";
}

<style>
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

    #qrcode {
        width: 20px;
        height: 20px;
        margin-top: 15px;
    }

</style>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@ViewBag.Khachhang.Ten</h4>
                                <p class="text-secondary mb-1"></p>
                                <p class="text-muted font-size-sm"></p>
                                <button class="btn btn-primary"></button>
                                <button class="btn btn-outline-primary"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Tên</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.Khachhang.Ten
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ngày sinh</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @{
                                    DateTime x = @ViewBag.Khachhang.Ngaysinh;
                                    <p>@x.ToString().Substring(0, 10)</p>
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">CCCD</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.Khachhang.CCCD
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-6">
                                <h6 class="mb-0">Thẻ học sinh, sinh viên (nếu có)</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
                                @ViewBag.Khachhang.TheHSSV
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Địa chỉ</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.Khachhang.Diachi
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gutters-sm">
            <div class="col-sm-12 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">DANH SÁCH VÉ ĐÃ MUA</i></h6>
                        <table id="table_tuyenxe" class="table">
                            <thead>
                                <tr>
                                    <th>Ngày mua</th>
                                    <th>Trạng thái</th>
                                    <th>Số lượt sử dụng (Dành cho vé tháng)</th>
                                    <th>QR Code</th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                @foreach (var m in @ViewBag.ListVe)
                                {
                                    <tr>
                                        <td>@m.Ngaymua</td>
                                        @if (m.Trangthai == 1)
                                        {
                                            <td style="color: green">Còn lượt sử dụng</td>

                                        }
                                        else
                                        {
                                            <td style="color: green">Hết lượt</td>

                                        }
                                        <td>@m.Soluotsudung</td>
                                        <td style="text-align: center" id="qrcode">
                                            <img src="data:image/png;base64," style="display: block;">
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

